doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Company - Quorum
    meta(name='description' content='Quorum')
    meta(name='keywords' content='quorum')
    meta(name='author' content='Douézan-Grard Guillaume - Quorum')
    link(rel="icon", type="image/png", href="images/icons/favicon-96x96.png", sizes="96x96")
    link(rel="icon", type="image/png", href="images/icons/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/icons/favicon-16x16.png", sizes="16x16")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    link(rel='stylesheet' href='stylesheets/app.css')
  body.fr
    include includes/nav.jade
    header#page
      .container(lang="fr")
        ul
          li Nous contacter
          hr
        .quote
          p Idées. Étude personnalisée. Nous rejoindre.
      .container(lang="en")
        ul
          li Get in touch
          hr
        .quote
          p We'd like to hear from you!
    main
      section#contact
        .container(lang="fr")
          .form
            form(action="//formspree.io/info@quorumapps.com" method="POST")
              input(type="email" name="_replyto" placeholder="john@doe.com")
              input(type="text" name="name" placeholder="John Doe")
              textarea(name="message" rows="5" placeholder="Your message")
              input(type="text" name="_gotcha" style="display:none")
              input(type="submit" value="Go")
          .reachus
            .contact
              h3 Contactez-nous
              span.phone
                <i class="fa fa-phone"></i>
                | +33 1 79 73 40 04
              span.mail
                <i class="fa fa-envelope"></i>
                | info@quorum-impact.com
            .cities
              h3 Où nous trouver
              .city
                span 9 rue de Condé
                span 33000 #[strong Bordeaux]
              .city
                span Avenue de Villiers
                span 75017 #[strong Paris]
            .social-links
              h3 Suivez-nous
              ul
                li
                  a(href='//facebook.com/quorumimpact' target="_blank")
                    i.icon-facebook
                li
                  a(href='//twitter.com/quorumimpact' target="_blank")
                    i.icon-twitter
                li
                  a(href='//www.linkedin.com/company/10114882' target="_blank")
                    i.icon-linkedin
                li
                  a(href='//google.com/+Quorumappsdata' target="_blank")
                    i.icon-google
      section#newsletter
        .container(lang="fr")
          .content
            span.signup Inscrivez-vous pour recevoir notre actualité
            #mc_embed_signup
              form(action="//quorum-impact.us12.list-manage.com/subscribe/post?u=8d7c7595072992d8808c7993d&amp;id=e648f190bc" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
                #mc_embed_signup_scroll
                .mc-field-group
                  input(type="email" value="" name="EMAIL" placeholder="john@goe.com" class="required email" id="mce-EMAIL")
                #mce-responses.clear
                  #mce-error-response.response(style="display:none")
                  #mce-success-response.response(style="display:none")
                  input(type="text" name="b_8d7c7595072992d8808c7993d_e648f190bc" tabindex="-1" value="" style="display:none")
                  input(type="submit" value="Je m'inscris" name="subscribe" id="mc-embedded-subscribe" class="button")
        .container(lang="en")
          .content
            span.signup Get updates
            #mc_embed_signup
              form(action="//quorum-impact.us12.list-manage.com/subscribe/post?u=8d7c7595072992d8808c7993d&amp;id=e648f190bc" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
                #mc_embed_signup_scroll
                .mc-field-group
                  input(type="email" value="" name="EMAIL" placeholder="john@doe.com" class="required email" id="mce-EMAIL")
                #mce-responses.clear
                  #mce-error-response.response(style="display:none")
                  #mce-success-response.response(style="display:none")
                  input(type="text" name="b_8d7c7595072992d8808c7993d_e648f190bc" tabindex="-1" value="" style="display:none")
                  input(type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button")
    include includes/footer.jade
    include includes/js.jade