doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Contact - Quorum
    meta(name='description' content='Quorum')
    meta(name='keywords' content='quorum')
    meta(name='author' content='Douézan-Grard Guillaume - Quorum')
    link(rel="icon", type="image/png", href="images/icons/favicon-96x96.png", sizes="96x96")
    link(rel="icon", type="image/png", href="images/icons/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/icons/favicon-16x16.png", sizes="16x16")
    link(rel='stylesheet' type='text/css' href='https://fonts.googleapis.com/css?family=Lora')
    link(rel='stylesheet' href='stylesheets/app.css')
  body.fr
    include includes/nav.jade
    header#page
      .container
        ul
          li(lang="fr") Nous contacter
          li(lang="en") Get in touch
          hr
        .quote
          p(lang="fr") Nous serions ravis d'échanger avec vous
          p(lang="en") We'd like to hear from you
    main
      section#contact
        .container
          .form
            form(action="//formspree.io/info@quorumapps.com" method="POST")
              input(type="email" name="_replyto" placeholder="john@doe.com")
              input(type="text" name="name" placeholder="John Doe")
              textarea(name="message" rows="5" placeholder="Your message")
              input(type="text" name="_gotcha" style="display:none")
              input(type="submit" value="Go")
          .reachus
            .contact
              h3(lang="fr") Contactez-nous
              h3(lang="en") Contact us
              span.phone
                <i class="fa fa-phone"></i>
                | +33 1 79 73 40 04
              span.mail
                <i class="fa fa-envelope"></i>
                | info@quorum-impact.com
            .cities
              h3(lang="fr") Où nous trouver
              h3(lang="en") Where to find us
              .city
                p 9 rue de Condé
                p 33000 #[strong Bordeaux]
              .city
                p 124 Avenue de Villiers
                p 75017 #[strong Paris]
            .social-links
              h3(lang="fr") Suivez-nous
              h3(lang="en") Follow us
              ul
                li
                  a(href='//facebook.com/quorumimpact' target="_blank")
                    i.icon-facebook
                li
                  a(href='//twitter.com/quorumimpact' target="_blank")
                    i.icon-twitter
                li
                  a(href='//www.linkedin.com/company/10114882' target="_blank")
                    i.icon-linkedin
                li
                  a(href='//google.com/+Quorumappsdata' target="_blank")
                    i.icon-google
      section#newsletter
        .container
          .content
            span(lang="fr").signup Inscrivez-vous pour recevoir notre actualité
            span(lang="en").signup Get updates
            #mc_embed_signup
              form(action="//quorum-impact.us12.list-manage.com/subscribe/post?u=8d7c7595072992d8808c7993d&amp;id=e648f190bc" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
                #mc_embed_signup_scroll
                .mc-field-group
                  input(type="email" value="" name="EMAIL" placeholder="john@doe.com" class="required email" id="mce-EMAIL")
                #mce-responses.clear
                  #mce-error-response.response(style="display:none")
                  #mce-success-response.response(style="display:none")
                  input(type="text" name="b_8d7c7595072992d8808c7993d_e648f190bc" tabindex="-1" value="" style="display:none")
                  input(lang="fr" type="submit" value="Je m'inscris" name="subscribe" id="mc-embedded-subscribe" class="button")
                  input(lang="en" type="submit" value="Get it" name="subscribe" id="mc-embedded-subscribe" class="button")
    include includes/footer.jade
    include includes/js.jade